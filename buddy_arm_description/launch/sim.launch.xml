<?xml version="1.0"?>

<launch>

    <let name = "urdf_path" 
    value="$(find-pkg-share buddy_arm_description)/urdf/main.urdf.xacro" />
    
    <!-- <let name="rviz_config_path"
        value="$(find-pkg-share buddy_arm_description)/rviz/urdf_config.rviz"/> -->

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" 
        value="$(command 'xacro $(var urdf_path)')"/>
    </node>
    
    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">

    </include>

    <!-- <include file="$(find-pkg-share buddy_arm_controller)/launch/controller.launch.py">
        
    </include> -->
    <node pkg="gazebo_ros" exec="spawn_entity.py"
        args="-topic robot_description -entity arm"/>
   

</launch>
    